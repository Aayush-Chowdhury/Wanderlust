<% layout("/layouts/boilerplate")%>
    
       <div class="row mt-3">
        <div class="col-8 offset-2">
             <h3>Edit List</h3><br>
<form method="POST" action="/listings/<%=list.id%>?_method=PUT" novalidate class="needs-validation" enctype = "multipart/form-data">
  
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
       <input type="text" value="<%=list.title%>" name="listing[title]" class="form-control" required>
       <div class="valid-feedback">Title looks good</div>
    <div class="invalid-feedback">Title should be valid</div> 
      </div>
  
   
    <div class="mb-3">
       <label for="title" class="form-label">Description</label>
     <textarea name="listing[description]" class="form-control" required><%= list.description %></textarea>
     <div class="invalid-feedback">Description should be valid</div>
    </div>
      
     <div class="mb3">
      Original Listing Image <br>
      <img src="<%=originalImageUrl%>" class="img-fluid img-thumbnail" style="max-width: 250px;">
     </div>

    <div class="mb-3">
      <label for="title" class="form-label">Upload New Image</label>
      <input type="file"  value="<%=list.image%>"  name="image" class="form-control" >
     </div>
       
    <div class="row">
    <div class="mb-3 col-4">
      <label for="price" class="form-label">Price</label>
    <input type="number"  value="<%=list.price%>" class="form-control" name="listing[price]" required>
     <div class="invalid-feedback">Price should be valid</div>
     
  </div>
  
    <div class="mb-3 col-8">
         <label for="location" class="form-label">Location</label>
     <input type="text"  value="<%=list.location%>" class="form-control"  name="listing[location]" required>
     <div class="invalid-feedback">Location should be valid</div>
    
    </div>
    </div>
    <div class="mb-3">
         <label for="country" class="form-label">Country</label>
        <input type="text"  value="<%=list.country%>" class="form-control" name="listing[country]" required>
     <div class="invalid-feedback">Country should be valid</div>
        
      </div>
    <br>
    
 
    <button class="btn btn-dark">Submit</button>
    <br><br>
    
</form>
<br>
  </div>
  </div>